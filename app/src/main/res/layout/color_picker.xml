<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="200dp"
    app:cardCornerRadius="20dp"
    app:strokeColor="@color/noteAqua"
    app:strokeWidth="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">



        <!--   Title   -->
        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/itim"
            android:text="@string/select_bg_color"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <!--   Color Picker   -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/aqua"
            android:layout_width="45dp"
            android:layout_height="90dp"
            android:layout_marginHorizontal="4dp"
            android:backgroundTint="@color/noteAqua"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialogTitle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/green"
            android:layout_width="45dp"
            android:layout_height="90dp"
            android:layout_marginHorizontal="4dp"
            android:backgroundTint="@color/noteGreen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pink"
            app:layout_constraintStart_toEndOf="@+id/aqua"
            app:layout_constraintTop_toBottomOf="@+id/dialogTitle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pink"
            android:layout_width="45dp"
            android:layout_height="90dp"
            android:layout_marginHorizontal="4dp"
            android:backgroundTint="@color/notePink"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/purple"
            app:layout_constraintStart_toEndOf="@+id/green"
            app:layout_constraintTop_toBottomOf="@+id/dialogTitle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/purple"
            android:layout_width="45dp"
            android:layout_height="90dp"
            android:layout_marginHorizontal="4dp"
            android:backgroundTint="@color/notePurple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/yellow"
            app:layout_constraintStart_toEndOf="@+id/pink"
            app:layout_constraintTop_toBottomOf="@+id/dialogTitle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/yellow"
            android:layout_width="45dp"
            android:layout_height="90dp"
            android:layout_marginHorizontal="4dp"
            android:backgroundTint="@color/noteYellow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/purple"
            app:layout_constraintTop_toBottomOf="@+id/dialogTitle" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>